# Environment variables for Flask GraphQL Server
# Copy this file to .env and modify as needed

# Server Configuration
DEBUG=True
HOST=0.0.0.0
PORT=5000
SECRET_KEY=dev-secret-key-change-in-production

# Database Configuration
# Note: If not specified, will default to server/test.db
# DATABASE_URL=sqlite+aiosqlite:///path/to/your/database.db

# GraphQL Configuration
GRAPHQL_ENABLE_INTROSPECTION=True
GRAPHQL_ENABLE_PLAYGROUND=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
